<section class="container">
  <h3 class="muscleGroup-name">{{muscleGroup.name}}</h3>
  <h4>Opening Hour: {{format_time muscleGroup.starting_date}}</h4>
  <h4>Closing Hour: {{format_time muscleGroup.ending_date}}</h4>
  <!-- If the user is logged in, render the gallery content -->
  {{#if loggedIn}}
  <section class="flex-row justify-center">
    {{#each muscleGroup.exercises as |exercise|}}
    {{> exercise-details}}
    {{/each}}
  </section>
</section>
<!-- Otherwise, provide a link to login -->
{{else}}
<a href="/login">You must login first to view the paintings</a>
{{/if}}

